# Kalshi Credentials
KALSHI_API_KEY_ID=your_api_key_id
KALSHI_PRIVATE_KEY_PATH=/path/to/your/key.pem

# Bot Settings
USE_DEMO=false
DRY_RUN=true

# Strategy Settings
MIN_CERTAINTY=95       # Minimum price to consider (95 = 95¢)
MAX_BUY_PRICE=99       # Maximum price we'll pay (99 = 99¢)
MAX_POSITION_CENTS=5000  # Max position size ($50 = 5000 cents)
SCAN_INTERVAL_SECONDS=30

# Optional: Discord alerts
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/...
